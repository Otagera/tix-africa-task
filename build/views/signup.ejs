<%- include("./partials/header.ejs")%>
<section id='signup' class="col-12 col-lg-8 layout-wrapper d-flex flex-column mx-auto my-5 py-5 border rounded bg-light">
    <h1 class="text-center col-sm mt-3">Signup</h1>
    <form id='signup-form' action="" class='form col-sm d-flex row'>
        <div id='input-group' class="mb-3 m-auto w-75">
            <label for="username">Username: </label>
            <input class="input w-100" id="signup-username" autocomplete="off" name='username' />
        </div>
        <div id='input-group' class="mb-3 m-auto w-75">
            <label for="password">Password: </label>
            <input class="input w-100" id="signup-password" autocomplete="off" name='password' type="password" />
        </div>
        <button type="submit" form="signup-form" class="btn btn-primary mx-auto w-50"> Signup </button>
    </form>
    <div class="text-center">
    	<h4>Already have an account? </h4>
		<a href="/auth/login" class="text-primary">
			<span id='signup-sign'>Login</span>
		</a>
    </div>

    <!-- Start Signup Error Modal -->
    <div class="modal fade" id="signup-error" tabindex="-1" role="dialog" aria-labelledby="signup-error" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-size-16" id="addContact-exampleModalLabel">Signup Not Successful</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <p id="signup-err-msg">Username/Password is incorrect, please check and retry again.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Signup Error Modal -->
</section>
<%- include("./partials/footer.ejs", { jsFile: 'signup' })%>
